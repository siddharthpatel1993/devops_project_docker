FROM ansibleimage AS stage1

FROM ubuntu
ENV DEBIAN_FRONTEND=noninteractive
RUN apt-get update
RUN apt-get upgrade -y
RUN apt-get -y install gnupg
RUN apt-get -y install apache2 curl tcpdump telnet iputils-ping sudo wget vim net-tools openssh-server
RUN wget -qO - https://artifacts.elastic.co/GPG-KEY-elasticsearch | sudo apt-key add -
RUN apt-get -y install apt-transport-https
RUN echo "deb https://artifacts.elastic.co/packages/oss-7.x/apt stable main" | sudo tee  /etc/apt/sources.list.d/elastic-7.x.list
RUN apt-get update
RUN apt-get -y install filebeat
COPY filebeat.yml /etc/filebeat/filebeat.yml
RUN filebeat modules enable apache
ADD testwebserver.tar /var/www/html/
RUN apt-get -y install metricbeat
COPY metricbeat.yml /etc/metricbeat/metricbeat.yml
RUN metricbeat modules enable apache
COPY apache.yml /etc/metricbeat/modules.d/apache.yml
#ENTRYPOINT sudo service apache2 restart && bash
#RUN service filebeat start
#RUN service metricbeat start
FROM ansiblesimage AS stage1
RUN mkdir /home/normaluser
RUN useradd normaluser
RUN echo 'normaluser:normaluser123' | chpasswd
RUN chown normaluser:normaluser /home/normaluser
RUN sed -i 's/#PasswordAuthentication yes/PasswordAuthentication yes/' /etc/ssh/sshd_config
RUN sed -i 's/#PubkeyAuthentication yes/PubkeyAuthentication yes/' /etc/ssh/sshd_config
RUN echo 'root:password' | chpasswd
RUN echo "normaluser    ALL=(ALL:ALL) NOPASSWD:ALL" >> /etc/sudoers
COPY --from=stage1  /home/normaluser/.ssh/id_rsa.pub /home/normaluser/.ssh/authorized_keys
RUN chmod 600 /home/normaluser/.ssh/authorized_keys
RUN chmod 700 /home/normaluser/.ssh/
RUN chown -R normaluser:normaluser /home/normaluser/.ssh/
USER normaluser
WORKDIR /home/normaluser
EXPOSE 22
ENTRYPOINT sudo service ssh restart && bash
 
